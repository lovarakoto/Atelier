<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>{% block title %}Bienvenue{% endblock %}</title>

        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/bootstrap-theme.min.css') }}" rel="stylesheet" />
        
    </head>
    <body>

<!-- Fixed navbar -->
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">MARVEL</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    {% block navigation %}
                        <ul class="nav navbar-nav">
                            <li><a href="#">Dead On Arrival</a></li>
                            <li><a href="#">Saisie atelier</a></li>
                            <li><a href="#">Controle atelier</a></li>
                            <li><a href="#">Retour reparation</a></li>
                            <li><a href="#">Lecteur cheque</a></li>
                            <li><a href="#">Utilisateurs</a></li>
                            <li><a href="#">Referentiels</a></li>
                            <li><a href="#">Dashboard</a></li>
                        </ul>
                    {% endblock %}
                </div><!--/.nav-collapse -->
            </div>
        </nav>

<!-- Begin page content -->
        <div class="container">
            <section class="sec-info">
                {% block info %}{% endblock %}
            </section>

            <section class="sec-body">
                {% block body %}{% endblock %}
            </section>

        </div>

        <footer>
            <div class="date">{{ "now"|date("l d F Y") }}</div>
            {% block footer %}{% endblock %}
        </footer>

        <script src="{{ asset('js/jquery-1.11.3.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>

    </body>
</html>